<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/receipt_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@android:drawable/dialog_holo_light_frame">

    <TextView
        android:id="@+id/receipt_storename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="Kaufland"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/receipt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="20.06.2018"
        android:fontFamily="serif"
        android:textSize="25sp"
/>

    <TextView
        android:id="@+id/receipt_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receipt_date"
        android:layout_alignParentEnd="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="â‚¬"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/receipt_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receipt_date"
        android:layout_toStartOf="@+id/receipt_currency"
        android:text="19,99"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/receipt_numberarticles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receipt_storename"
        android:layout_marginStart="50dp"
        android:paddingTop="5dp"
        android:text="6"
        android:fontFamily="serif"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/receipt_articleimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receipt_storename"
        android:layout_toEndOf="@+id/receipt_numberarticles"
        android:paddingTop="5dp"
        android:src="@drawable/ic_shopping_black" />

</RelativeLayout>