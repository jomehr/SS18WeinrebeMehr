<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/receipt_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@android:drawable/dialog_holo_light_frame">

    <TextView
        android:id="@+id/receipt_article_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:text="Schinken"
        android:fontFamily="serif-monospace"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/receipt_article_priceTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/receipt_article_currencyTotal"
        android:text="4,98"
        android:fontFamily="serif-monospace"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/receipt_article_currencyTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="€"
        android:fontFamily="serif-monospace"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/receipt_article_participantNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receipt_article_currencyTotal"
        android:layout_alignParentEnd="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="4"
        android:fontFamily="serif-monospace"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/receipt_article_participantIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/receipt_article_participantNumber"
        android:layout_below="@+id/receipt_article_priceTotal"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_group_black"/>

    <TextView
        android:id="@+id/receipt_article_numberIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receipt_article_name"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:text="#"
        android:fontFamily="serif-monospace"
        android:textColor="@color/black"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/receipt_article_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receipt_article_name"
        android:layout_toEndOf="@+id/receipt_article_numberIcon"
        android:text="2"
        android:fontFamily="serif-monospace"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/receipt_article_priceSingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receipt_article_name"
        android:layout_toEndOf="@+id/receipt_article_amount"
        android:layout_marginStart="30dp"
        android:text="2.49"
        android:fontFamily="serif-monospace"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/receipt_article_currencySingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receipt_article_name"
        android:layout_toEndOf="@id/receipt_article_priceSingle"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="€"
        android:fontFamily="serif-monospace"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="normal"/>

</RelativeLayout>