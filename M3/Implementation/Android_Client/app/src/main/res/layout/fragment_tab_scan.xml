<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondaryLight"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scan_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scan_instruction"
                android:textAlignment="viewStart"
                android:textSize="15sp" />

            <Button
                android:id="@+id/scan_cameraButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:text="@string/start_camera" />

            <TextView
                android:id="@+id/scan_result_title"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/scan_result"
                android:textColor="@color/black"
                android:textSize="25sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="494dp" />

            <TextView
                android:id="@+id/scan_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:padding="10dp"
                android:text="Hier erscheint die Scan-Funktion"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>